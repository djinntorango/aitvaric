<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Your head content goes here -->
</head>
<body>
<div class="top-panel">
  <div class="top-panel-cl">
    <div class="panel-title">{{help_center.name}}</div>
    <div class="top-chevron"></div>
  </div>
  <ul class="top-categories-list" id="top-categories-list">
    <!-- Categories will be dynamically added here -->
  </ul>
</div>
<aside class="side-panel">
    <nav class="sub-nav">
      <div class="search-container">
        {{search scoped=settings.scoped_kb_search submit=false}}
      </div>
      <ol class="breadcrumbs">
     {{help_center.name}}
      </ol>
    </nav>
  <!-- Add content for side panel here -->
  <ul class="categories-list" id="categories-list">
    <!-- Categories will be dynamically added here -->
  </ul>
</aside>

<div class="container">
<!-- Hero Section-->
<section class="hero">
  <div class="hero-fill">
    <div {{#is settings.hero_layout "side-by-side"}}class="hero-content"{{/is}}{{#is settings.hero_layout "full-width"}}class="hero-full"{{/is}}>
      <h2 class="welcome-text">{{#if settings.translations_toggle}}{{dc 'hero_welcome_message'}}{{else}}{{settings.hero_welcome_message}}{{/if}}</h2>
      <h2 class="visibility-hidden">{{ t 'search' }}</h2>
      {{search submit=false instant=settings.instant_search class='search search-full'}}
      		{{#if settings.popular_search_toggle}}
            <div class="popular-searches">
              <ul class="popular-search-items">            
              	{{#if settings.translations_toggle}}
               		<li><a href="{{dc 'locale'}}{{dc 'popular_search_1'}}">{{dc 'popular_search_1'}}</a>
                  <li><a href="{{dc 'locale'}}{{dc 'popular_search_2'}}">{{dc 'popular_search_2'}}</a>
                  <li><a href="{{dc 'locale'}}{{dc 'popular_search_3'}}">{{dc 'popular_search_3'}}</a>
                {{else}}
                  <li>{{#link 'search_result' query= settings.popular_search_1}}{{settings.popular_search_1}}{{/link}}
									<li>{{#link 'search_result' query= settings.popular_search_2}}{{settings.popular_search_2}}{{/link}}
                  <li>{{#link 'search_result' query= settings.popular_search_3}}{{settings.popular_search_3}}{{/link}}
               {{/if}}
               
            </ul>
         </div>
      {{/if}}
    </div>
  </div>
</section>

<!-- Callouts -->
<section class="callout-blocks">
  <a href="{{#if settings.translations_toggle}}{{dc 'block_1_link'}}{{else}}{{settings.block_1_link}}{{/if}}" class="callout-block">
    <span class='block-image block-1-image' alt="{{settings.block_1_title}}"></span>
    <h3>{{#if settings.translations_toggle}}{{dc 'block_1_title'}}{{else}}{{settings.block_1_title}}{{/if}}</h3>
    <p>{{#if settings.translations_toggle}}{{dc 'block_1_description'}}{{else}}{{settings.block_1_description}}{{/if}}</p>
  </a>

  <a href="{{#if settings.translations_toggle}}{{dc 'block_2_link'}}{{else}}{{settings.block_2_link}}{{/if}}" class="callout-block">
    <span class='block-image block-2-image' alt="{{settings.block_2_title}}"></span>
    <h3>{{#if settings.translations_toggle}}{{dc 'block_2_title'}}{{else}}{{settings.block_2_title}}{{/if}}</h3>
    <p>{{#if settings.translations_toggle}}{{dc 'block_2_description'}}{{else}}{{settings.block_2_description}}{{/if}}</p>
  </a>

  <a href="{{#if settings.translations_toggle}}{{dc 'block_3_link'}}{{else}}{{settings.block_3_link}}{{/if}}" class="callout-block">
    <span class='block-image block-3-image' alt="{{settings.block_3_title}}"></span>
    <h3>{{#if settings.translations_toggle}}{{dc 'block_3_title'}}{{else}}{{settings.block_3_title}}{{/if}}</h3>
    <p>{{#if settings.translations_toggle}}{{dc 'block_3_description'}}{{else}}{{settings.block_3_description}}{{/if}}</p>
  </a>
</section>

<!-- Categories -->
{{#if settings.show_categories}}
 <section class="knowledge-base">
    <h2 class="articles-header-text">{{ t 'browse_help_center' }}</h2>
    <section class="categories blocks">
      <ul class="category-blocks-container">
        {{#each categories}}
          {{#if ../has_multiple_categories}}
            <li class="home-blocks-item">
              <a href='{{url}}' class="blocks-item-link">
                <h3 class="blocks-item-title">{{name}}</h3>
                <span class="blocks-item-description">{{description}}</span>
              </a>
            </li>
          {{else}}
            {{#each sections}}
              <li class="home-blocks-item">
                <a href='{{url}}' class="blocks-item-link">
                  <h3 class="blocks-item-title">
                    {{name}}
                  </h3>
                </a>
              </li>
            {{/each}}
          {{/if}}
        {{/each}}
      </ul>
      {{pagination}}
    </section>
  </section>
{{/if}}
<!-- Promoted articles -->
{{#if settings.show_promoted_articles}}
<section class="articles">
    <div class="articles-header">
        <h2 class="articles-header-text">{{t 'promoted_articles'}}</h2>
    </div>
    <ul class="article-list promoted-articles">
        {{#each promoted_articles}}
            <a href="{{url}}" class="promoted-article">
                <li class="promoted-articles-item">
                      <div class="promoted-article-title">{{title}}</div>
                        {{#if internal}}
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16" class="icon-lock" title="{{t 'internal'}}">
                                <rect width="12" height="9" x="2" y="7" fill="currentColor" rx="1" ry="1"/>
                                <path fill="none" stroke="currentColor" d="M4.5 7.5V4a3.5 3.5 0 017 0v3.5"/>
                            </svg>
                        {{/if}}
                </li>
            </a>
        {{/each}}
    </ul>
</section>
{{/if}}
</div>
</body>
</html>
